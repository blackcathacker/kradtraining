<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="Book-EntryDate" parent="Uif-DataField" p:label="Entry Date" 
		p:propertyName="entryDate" p:defaultValue="01/3/2013"></bean>
	<bean id="Book-AuthorName" parent="Uif-InputField" p:label="Author Name" 
		p:bindingInfo.bindingObjectPath="book.author" p:propertyName="authorName"/>
	<bean id="Book-AuthorEmail" parent="Uif-InputField" p:label="Author Email"
		p:bindingInfo.bindingObjectPath="book" p:bindingInfo.fieldBindByNamePrefix="author"
		p:propertyName="email"/>
	<bean id="Book-NYTSRating" parent="Uif-InputField" p:label="New York Times Rating"
		p:propertyName="book.ratings[NYTIMES]"/>
	<bean id="Book-AmazonRating" parent="Uif-InputField" p:label="Amazon Rating"
		p:propertyName="book.ratings[AMAZON]"/>
</beans>