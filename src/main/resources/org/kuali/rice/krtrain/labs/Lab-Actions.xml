<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean parent="Uif-PrimaryActionButton" p:actionLabel="save book" p:methodToCall="saveBook"/>
	<bean parent="Uif-PrimaryActionButton-Small" p:actionLabel="publisher summary" p:methodToCall="viewPublisher"
		p:actionParameters="format:summary"/>
	<bean parent="Uif-PrimaryActionButton-Small" p:actionLabel="publisher details" p:methodToCall="viewPublisher"
		p:actionParameters="format:detail"/>
	<bean parent="Uif-PrimaryActionButton" p:actionLabel="clear form" p:actionScript="clearForm();"/>	
	

</beans>