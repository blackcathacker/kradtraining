<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="Krtrain-BookEntryViewMenu" parent="Uif-FormView"
		p:headerText="Book Entry Menu"
		p:formClass="org.kuali.rice.krtrain.book.BookEntryForm"
		p:additionalCssFiles="@{#ConfigProperties['application.url']}/css/krad-training.css"
		p:additionalScriptFiles="@{#ConfigProperties['application.url']}/js/krad-training.js">
		<property name="items"><list>
			<ref bean="Krtrain-BookEntryPage1"/>
			<ref bean="Krtrain-BookEntryPage2"/>
		</list></property>
		<property name="navigation"><bean parent="Krtrain-BookEntryMenuNavigation"/></property>
	</bean>
	<bean id="Krtrain-BookEntryViewTabs" parent="Krtrain-BookEntryViewMenu"
		p:headerText="Book Entry Tabs">
		<property name="navigation"><bean parent="Krtrain-BookEntryTabNavigation"/></property>
	</bean>
	<bean id="Krtrain-BookEntryPage1" parent="Uif-Page">
	</bean>
	<bean id="Krtrain-BookEntryPage2" parent="Uif-Page">
	</bean>
    <bean id="Krtrain-BookEntryMenuNavigation" parent="Uif-MenuNavigationGroup">
        <property name="items">
            <list>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="Krtrain-BookEntryPage1"
                      p:actionLabel="Book Indexing"/>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="Krtrain-BookEntryPage1"
                      p:actionLabel="Book Context"/>
            </list>
        </property>
    </bean>

    <bean id="Krtrain-BookEntryTabNavigation" parent="Uif-TabNavigationGroup">
        <property name="items">
            <list>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="Krtrain-BookEntryPage1"
                      p:actionLabel="Book Indexing"/>
                <bean parent="Uif-NavigationActionLink" p:navigateToPageId="Krtrain-BookEntryPage1"
                      p:actionLabel="Book Context"/>
            </list>
        </property>
    </bean>

</beans>                    