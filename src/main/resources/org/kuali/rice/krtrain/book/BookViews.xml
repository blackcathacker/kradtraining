<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="Book-LookupView" parent="Uif-LookupView">
		<property name="headerText" value="Book Lookup" />
		<property name="dataObjectClassName" value="org.kuali.rice.krtrain.book.Book" />
		<property name="criteriaFields">
			<list>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="title" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="isbn" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="typeCode" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="publisher" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="publisherCode" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="publicationDate" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="price" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="fiction" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="availableFormats" p:addControlSelectAllOption="true"/>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="bindingType" 
				      p:progressiveRender="@{(#fp.availableFormats eq 'P') or #empty(#fp.availableFormats)}" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="languages" p:addControlSelectAllOption="true"/>
			</list>
		</property>
		<property name="resultFields">
			<list>
			    <bean parent="Uif-DataField" p:propertyName="id" />
				<bean parent="Uif-DataField" p:propertyName="title" />
				<bean parent="Uif-DataField" p:propertyName="typeCode" />
				<bean parent="Uif-DataField" p:propertyName="publisher" />
				<bean parent="Uif-DataField" p:propertyName="publisherAddress" />
				<bean parent="Uif-DataField" p:propertyName="publisherState" />
				<bean parent="Uif-DataField" p:propertyName="publicationDate" />
				<bean parent="Uif-DataField" p:propertyName="price" />
				<bean parent="Uif-DataField" p:propertyName="shortSummary" />
			</list>
		</property>
		<property name="resultsGroup.layoutManager.rowDetailsGroup">
            <bean parent="relatedBookChapters"/>
        </property>
	</bean>

</beans>                    